{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",  // Changed from "commonjs"
    "moduleResolution": "node",  // Add this
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}