{
  "compilerOptions": {
    // Specifies the output JavaScript language version
    "target": "ES2020",
    // Module system to use (CommonJS for Node.js)
    "module": "commonjs",
    // Output directory for the compiled JavaScript files
    "outDir": "./dist",
    // Root directory of TypeScript source files
    "rootDir": "./src",
    // Enable all strict type-checking options
    "strict": true,
    // Allow default imports from modules with no default export
    "esModuleInterop": true,
    // Skip type checking of declaration files (*.d.ts)
    "skipLibCheck": true,
    // Disallow inconsistently-cased references to the same file
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",  // Add this
  },
  // Files and folders to include in the compilation
  "include": ["src/**/*.ts"],
  // Files and folders to exclude from the compilation
  "exclude": ["node_modules"]
}